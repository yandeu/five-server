{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2015",
    "module": "CommonJS",

    "noImplicitAny": false,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
